{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": { 
      "project": ["./tsconfig.json"]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:security/recommended-legacy"
    ],
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-explicit-any": "warn"
    }
}
